      </center>
      </a>
    <%}%>
  <a type="button" href="/logout">
    <center>
    <img id="imgNavar" src="/static/img/navbar/salir2.png" alt="404Imagen Link">
    <br />
    Salir
  </center>
  </a>
</div>

<div class="encabezado"></div>
<header id="principal">
    <h1>Tabla de libros disponibles</h1>
</header>
<br />

<center>
<div class="botones">
  <button id="boton" onclick="btnTitulo()" type="button" class="btn btn-danger">Buscar titulo</button>
  <button id="boton" onclick="btnAutor()" type="button" class="btn btn-danger">Buscar autor</button>
  <button id="boton" onclick="btnEditorial()" type="button" class="btn btn-danger">Buscar editorial</button>
</div>
</center>
<script src="/static/js/botonesBusqueda.js"></script>

<div class="container">
  <div class="row">
    <center>
      <!--Buscar Titulo-->
      <%if(usuario[0].tipo == 'usuario'){%>
      <div class="card" id="titulo" style="display: none;">
        <div class="card-header">
          <p>Busqueda por titulo:</p>
        </div>
        <div class="card-body">
          <form action="/BuscarTitulo/infantil/<%= usuario[0].identificador%>/<%= ordenInicio%>" method="post">
            <input type="text" name="titulo" class="form-control"/>
            <button type="submit" class="btn btn-danger">Buscar</button>
          </form>
        </div>
      </div>

      <!--Buscar Autor-->
      <div class="card" id="autor" style="display: none;">
        <div class="card-header">
          <p>Busqueda por autor:</p>
        </div>
        <div class="card-body">
          <form action="/BuscarAutor/infantil/<%= usuario[0].identificador%>/<%= ordenInicio%>" method="post">
            <input type="text" name="autor" class="form-control"/>
            <button type="submit" class="btn btn-danger">Buscar</button>
          </form>
        </div>
      </div>

      <!--Buscar Editorial-->
      <div class="card" id="editorial" style="display: none;">
        <div class="card-header">
          <p>Busqueda por editorial:</p>
        </div>
        <div class="card-body">
          <form action="/BuscarEditorial/infantil/<%= usuario[0].identificador%>/<%= ordenInicio%>" method="post">
            <input type="text" name="editorial" class="form-control"/>
            <button type="submit" class="btn btn-danger">Buscar</button>
          </form>
        </div>
      </div>
      <%}
      else if(usuario[0].tipo == 'servicioSocial'){%>
        <div class="card" id="titulo" style="display: none;">
          <div class="card-header">
            <p>Busqueda por titulo:</p>
          </div>
          <div class="card-body">
            <form action="/servicio/BuscarTitulo/infantil/<%= usuario[0].identificador%>/<%= ordenInicio%>" method="post">
              <input type="text" name="titulo" class="form-control"/>
              <button type="submit" class="btn btn-danger">Buscar</button>
            </form>
          </div>
        </div>
  
        <!--Buscar Autor-->
        <div class="card" id="autor" style="display: none;">
          <div class="card-header">
            <p>Busqueda por autor:</p>
          </div>
          <div class="card-body">
            <form action="/servicio/BuscarAutor/infantil/<%= usuario[0].identificador%>/<%= ordenInicio%>" method="post">
              <input type="text" name="autor" class="form-control"/>
              <button type="submit" class="btn btn-danger">Buscar</button>
            </form>
          </div>
        </div>
  
        <!--Buscar Editorial-->
        <div class="card" id="editorial" style="display: none;">
          <div class="card-header">
            <p>Busqueda por editorial:</p>
          </div>
          <div class="card-body">
            <form action="/servicio/BuscarEditorial/infantil/<%= usuario[0].identificador%>/<%= ordenInicio%>" method="post">
              <input type="text" name="editorial" class="form-control"/>
              <button type="submit" class="btn btn-danger">Buscar</button>
            </form>
          </div>
        </div>
        <%}%>
    </center>

    <table class="table">
      <thead>
          <tr>
            <th colspan="7">Infantil</th>
          </tr>
          <tr>
              <th>id</th>
              <th>#</th>
              <th>Titulo</th>
              <th>Autor</th>
              <th>Editorial</th>
              <th>Volumen</th>
              <th>Ver más</th>
          </tr>
      </thead>
      <tbody>
          <% 
          var i=1;
            infantil.forEach((infantil)=>{
              if(i%2){
                %>
                <tr id="row1">
                  <td><b><%= i %></b></td>
                  <td><%= infantil.orden %></td>
                  <td><%= infantil.titulo%></td>
                  <td><%= infantil.autor%></td>
                  <td><%= infantil.editorial%></td>
                  <td>V.<%= infantil.volumen%></td>  
                  <td>
                    <a type="button" id="verMas" class="btn btn-primary" href="/informacionLibro/<%= infantil.id%>/<%= infantil.categoria%>/<%= usuario[0].identificador%>">
                      <p>Ver más</p>
                    </a>
                  </tr>
                  <%
                }else{%>
                  <tr id="row2">
                    <td><b><%= i %></b></td>
                    <td><%= infantil.orden %></td>
                    <td><%= infantil.titulo%></td>
                    <td><%= infantil.autor%></td>
                    <td><%= infantil.editorial%></td>
                    <td>V.<%= infantil.volumen%></td>  
                    <td>
                      <a type="button" id="verMas" class="btn btn-primary" href="/informacionLibro/<%= infantil.id%>/<%= infantil.categoria%>/<%= usuario[0].identificador%>">
                        <p>Ver más</p>
                      </a>
                    </tr>
                    <%
                }
            i=i+1;
           });
          %>
      </tbody>
  </table>
  </div>
</div>

