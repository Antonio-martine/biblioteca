        <img id="imgNavar" src="/static/img/navbar/home.png" alt="404Imagen Link">
        <br />
        Home
      </center>
      </a>
  <%}
  else if(usuario[0].tipo == 'servicioSocial'){%>
      <a type="button" href="/servicio/libros/<%= usuario[0].identificador%>">
        <center>
        <img id="imgNavar" src="/static/img/navbar/regreso.png" alt="404Imagen Link">
        <br />
        Regresar
        </center>
      </a>
      <a type="button" href="/servicio/homeServicio/<%= usuario[0].identificador%>">
