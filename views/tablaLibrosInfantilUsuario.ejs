<!--Código-->
<%
  var ordenInicio;
  if(infantil[0].orden >= 0 && infantil[0].orden < 100 ){
    ordenInicio = 0;
  }
  else if(infantil[0].orden >= 100 && infantil[0].orden < 200 ){
    ordenInicio = 100;
  }
  else if(infantil[0].orden >= 200 && infantil[0].orden < 300 ){
    ordenInicio = 200;
  }
  else if(infantil[0].orden >= 300 && infantil[0].orden < 400 ){
    ordenInicio = 300;
  }
  else if(infantil[0].orden >= 400 && infantil[0].orden < 500 ){
    ordenInicio = 400;
  }
  else if(infantil[0].orden >= 500 && infantil[0].orden < 600 ){
    ordenInicio = 500;
  }
  else if(infantil[0].orden >= 600 && infantil[0].orden < 700 ){
    ordenInicio = 600;
  }
  else if(infantil[0].orden >= 700 && infantil[0].orden < 800 ){
    ordenInicio = 700;
  }
  else if(infantil[0].orden >= 800 && infantil[0].orden < 900 ){
    ordenInicio = 800;
  }
  else if(infantil[0].orden >= 900 && infantil[0].orden < 1000 ){
    ordenInicio = 900;
  }
 
%>

